{
  "name": "multi-repo-git-commands",
  "displayName": "Multi Repo Git Commands",
  "description": "This extension lets you run Git commands across all repositories opened in your current workspace. It provides a simple and consistent way to execute operations such as pull, commit, or push simultaneously on multiple projects, saving time and reducing repetitive manual work.",
  "version": "1.0.0",
  "publisher": "DanieleDituri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DanieleDituri/multi-repo-git-commands.git"
  },
  "bugs": {
    "url": "https://github.com/DanieleDituri/multi-repo-git-commands/issues"
  },
  "homepage": "https://github.com/DanieleDituri/multi-repo-git-commands#readme",
  "icon": "images/icon.png",
  "files": [
    "dist/",
    "images/",
    "package.json"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "multi-repo",
    "workspace",
    "monorepo",
    "source control"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Multi Repo Git Commands",
      "properties": {
        "multiRepoGit.scanNested": {
          "type": "boolean",
          "default": true,
          "description": "Scan workspace folders recursively to discover nested Git repositories."
        },
        "multiRepoGit.maxDepth": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "maximum": 8,
          "description": "Maximum directory depth to scan for nested Git repositories. 0 means only the folder itself; 1 scans immediate children, etc."
        },
        "multiRepoGit.excludeFolders": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            ".git",
            "dist",
            "build",
            "out",
            ".next",
            ".cache"
          ],
          "description": "Folder names to exclude during nested repository scanning."
        },
        "multiRepoGit.toolbarButtonSize": {
          "type": "number",
          "default": 75,
          "minimum": 40,
          "maximum": 150,
          "description": "Height of the toolbar buttons in pixels (40-150). Default is 75px."
        }
      }
    },
    "commands": [
      {
        "command": "multi-repo-git-commands.runGitAll",
        "title": "Multi-Repo Git: Run Command",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.runCustomGitAll",
        "title": "Multi-Repo Git: Run Custom…",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.statusAll",
        "title": "Multi-Repo Git: Status All",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.fetchAll",
        "title": "Multi-Repo Git: Fetch All",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.pullAll",
        "title": "Multi-Repo Git: Pull All (rebase)",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.pushAll",
        "title": "Multi-Repo Git: Push All",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.commitAll",
        "title": "Multi-Repo Git: Commit All",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.stageAll",
        "title": "Multi-Repo Git: Stage All Changes",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.unstageAll",
        "title": "Multi-Repo Git: Unstage All Changes",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.discardAll",
        "title": "Multi-Repo Git: Discard All Changes",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.stashAll",
        "title": "Multi-Repo Git: Stash All Changes",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.popStashAll",
        "title": "Multi-Repo Git: Pop Stash All",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.checkoutAll",
        "title": "Multi-Repo Git: Checkout Branch (All)",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.createBranchAll",
        "title": "Multi-Repo Git: Create Branch (All)",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.deleteBranchAll",
        "title": "Multi-Repo Git: Delete Branch (All)",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.createTagAll",
        "title": "Multi-Repo Git: Create Tag (All)",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.deleteTagAll",
        "title": "Multi-Repo Git: Delete Tag (All)",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.createRemoteAll",
        "title": "Multi-Repo Git: Create Remote (All)",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.deleteRemoteAll",
        "title": "Multi-Repo Git: Delete Remote (All)",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.resetWorkspace",
        "title": "Multi-Repo Git: Reset Workspace",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.openRepo",
        "title": "Open Repository",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.statusRepo",
        "title": "Status",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.fetchRepo",
        "title": "Fetch",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.pullRepo",
        "title": "Pull (rebase)",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.customRepo",
        "title": "Run Custom Command…",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.discardRepo",
        "title": "Discard All Changes",
        "category": "Git (Multi-Repo)"
      },
      {
        "command": "multi-repo-git-commands.checkoutRepo",
        "title": "Checkout Branch…",
        "category": "Git (Multi-Repo)"
      }
    ],
    "submenus": [
      {
        "id": "mrg:commit",
        "label": "Commit"
      },
      {
        "id": "mrg:pull-push",
        "label": "Pull, Push"
      },
      {
        "id": "mrg:stash",
        "label": "Stash"
      },
      {
        "id": "mrg:branches",
        "label": "Branch"
      },
      {
        "id": "mrg:tags",
        "label": "Tag"
      },
      {
        "id": "mrg:changes",
        "label": "Changes"
      },
      {
        "id": "mrg:remotes",
        "label": "Remote"
      }
    ],
    "menus": {
      "mrg:commit": [
        {
          "command": "multi-repo-git-commands.commitAll"
        }
      ],
      "mrg:pull-push": [
        {
          "command": "multi-repo-git-commands.pullAll"
        },
        {
          "command": "multi-repo-git-commands.pushAll"
        }
      ],
      "mrg:stash": [
        {
          "command": "multi-repo-git-commands.stashAll"
        },
        {
          "command": "multi-repo-git-commands.popStashAll"
        }
      ],
      "mrg:branches": [
        {
          "command": "multi-repo-git-commands.createBranchAll"
        },
        {
          "command": "multi-repo-git-commands.deleteBranchAll"
        },
        {
          "command": "multi-repo-git-commands.checkoutAll"
        }
      ],
      "mrg:tags": [
        {
          "command": "multi-repo-git-commands.createTagAll"
        },
        {
          "command": "multi-repo-git-commands.deleteTagAll"
        }
      ],
      "mrg:changes": [
        {
          "command": "multi-repo-git-commands.discardAll"
        },
        {
          "command": "multi-repo-git-commands.stageAll"
        },
        {
          "command": "multi-repo-git-commands.unstageAll"
        }
      ],
      "mrg:remotes": [
        {
          "command": "multi-repo-git-commands.createRemoteAll"
        },
        {
          "command": "multi-repo-git-commands.deleteRemoteAll"
        }
      ],
      "scm/sourceControl/context": [
        {
          "command": "multi-repo-git-commands.customRepo",
          "group": "inline"
        },
        {
          "command": "multi-repo-git-commands.openRepo",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "multi-repo-git-commands.runGitAll"
        },
        {
          "command": "multi-repo-git-commands.runCustomGitAll"
        },
        {
          "command": "multi-repo-git-commands.statusAll"
        },
        {
          "command": "multi-repo-git-commands.fetchAll"
        },
        {
          "command": "multi-repo-git-commands.pullAll"
        },
        {
          "command": "multi-repo-git-commands.pushAll"
        },
        {
          "command": "multi-repo-git-commands.commitAll"
        },
        {
          "command": "multi-repo-git-commands.stageAll"
        },
        {
          "command": "multi-repo-git-commands.unstageAll"
        },
        {
          "command": "multi-repo-git-commands.stashAll"
        },
        {
          "command": "multi-repo-git-commands.popStashAll"
        },
        {
          "command": "multi-repo-git-commands.discardAll"
        },
        {
          "command": "multi-repo-git-commands.checkoutAll"
        },
        {
          "command": "multi-repo-git-commands.createBranchAll"
        },
        {
          "command": "multi-repo-git-commands.deleteBranchAll"
        },
        {
          "command": "multi-repo-git-commands.createTagAll"
        },
        {
          "command": "multi-repo-git-commands.deleteTagAll"
        },
        {
          "command": "multi-repo-git-commands.createRemoteAll"
        },
        {
          "command": "multi-repo-git-commands.deleteRemoteAll"
        },
        {
          "command": "multi-repo-git-commands.resetWorkspace"
        },
        {
          "command": "multi-repo-git-commands.openRepo",
          "when": "false"
        },
        {
          "command": "multi-repo-git-commands.statusRepo",
          "when": "false"
        },
        {
          "command": "multi-repo-git-commands.fetchRepo",
          "when": "false"
        },
        {
          "command": "multi-repo-git-commands.pullRepo",
          "when": "false"
        },
        {
          "command": "multi-repo-git-commands.customRepo",
          "when": "false"
        },
        {
          "command": "multi-repo-git-commands.discardRepo",
          "when": "false"
        },
        {
          "command": "multi-repo-git-commands.checkoutRepo",
          "when": "false"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "multi-repo-git-explorer",
          "title": "Multi Repo Git",
          "icon": "images/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "multi-repo-git-explorer": [
        {
          "type": "webview",
          "id": "multi-repo-git-view",
          "name": "Search"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.43",
    "simple-git": "^3.30.0"
  }
}
